{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="hero section{% if section.settings.background_image != blank %} hero--has-image{% endif %}">
  {%- if section.settings.background_image != blank -%}
    <div class="hero__media">
      {{ section.settings.background_image | image_url: width: 1920 | image_tag:
        loading: 'eager',
        width: section.settings.background_image.width,
        height: section.settings.background_image.height,
        class: 'hero__image',
        sizes: '100vw',
        widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
        alt: section.settings.background_image.alt | escape
      }}
    </div>
  {%- endif -%}
  
  <div class="hero__content page-width">
    <div class="hero__text animate-fade-in-up">
      {%- if section.settings.title != blank -%}
        <h1 class="hero__title">{{ section.settings.title | escape }}</h1>
      {%- endif -%}
      
      {%- if section.settings.subtitle != blank -%}
        <p class="hero__subtitle">{{ section.settings.subtitle | escape }}</p>
      {%- endif -%}
      
      {%- if section.settings.cta_text != blank or section.settings.secondary_cta_text != blank -%}
        <div class="hero__cta">
          {%- if section.settings.cta_text != blank -%}
            <a href="{{ section.settings.cta_url | default: '#' }}" class="btn btn--accent btn--large">
              {{ section.settings.cta_text | escape }}
            </a>
          {%- endif -%}
          
          {%- if section.settings.secondary_cta_text != blank -%}
            <a href="{{ section.settings.secondary_cta_url | default: '#' }}" class="btn btn--outline btn--large">
              {{ section.settings.secondary_cta_text | escape }}
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
.hero {
  position: relative;
  padding: var(--spacing-2xl) 0;
  text-align: {{ section.settings.text_alignment | default: 'center' }};
  background: linear-gradient(135deg, var(--color-background) 0%, #f0f9ff 100%);
  overflow: hidden;
}

.hero--has-image {
  background: none;
  color: white;
  min-height: 70vh;
  display: flex;
  align-items: center;
}

.hero__media {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
}

.hero__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero--has-image::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: -1;
}

.hero__content {
  position: relative;
  z-index: 1;
}

.hero__text {
  max-width: 800px;
  margin: 0 auto;
}

.hero__title {
  font-size: 3.5rem;
  font-weight: 700;
  margin-bottom: var(--spacing-lg);
  color: inherit;
  line-height: 1.1;
}

.hero__subtitle {
  font-size: 1.25rem;
  margin-bottom: var(--spacing-xl);
  opacity: 0.9;
  line-height: 1.6;
}

.hero__cta {
  display: flex;
  gap: var(--spacing-md);
  justify-content: {{ section.settings.text_alignment | default: 'center' }};
  flex-wrap: wrap;
}

@media (max-width: 768px) {
  .hero {
    padding: var(--spacing-xl) 0;
  }
  
  .hero__title {
    font-size: 2.5rem;
  }
  
  .hero__subtitle {
    font-size: 1.125rem;
  }
  
  .hero__cta {
    flex-direction: column;
    align-items: center;
  }
  
  .btn {
    width: 100%;
    max-width: 300px;
  }
}

@media (max-width: 480px) {
  .hero__title {
    font-size: 2rem;
  }
  
  .hero__subtitle {
    font-size: 1rem;
  }
}
</style>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Live Long, Live Strong"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subheading",
      "default": "Premium superfood nutrition designed by doctors to optimize your health and vitality."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Primary button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary button text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_cta_url",
      "label": "Secondary button link"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}