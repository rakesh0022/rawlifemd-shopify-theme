<section class="ingredients-main page-width">
  <h1>{{ section.settings.title }}</h1>
  <p>{{ section.settings.description }}</p>

  <div class="ingredients-cta">
    <a href="{{ section.settings.cta_url }}" class="button">
      {{ section.settings.cta_text }}
    </a>

    {% if section.settings.secondary_cta_url != blank %}
      <a href="{{ section.settings.secondary_cta_url }}" class="button button--secondary">
        {{ section.settings.secondary_cta_text }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Ingredients Main",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Premium Ingredients"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover the science-backed ingredients that make our formulations effective."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Primary CTA Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Primary CTA URL",
      "default": "/products/rawlifemd-greens"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary CTA Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_cta_url",
      "label": "Secondary CTA URL",
      "default": "/pages/about"
    }
  ],
  "presets": [
    {
      "name": "Ingredients Main"
    }
  ]
}
{% endschema %}
