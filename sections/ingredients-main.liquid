<style>
.section-ingredients {
  padding: var(--spacing-2xl) 0;
}

.ingredients-page {
  min-height: 100vh;
}

.ingredients-header {
  padding: var(--spacing-xl) 0;
  background: linear-gradient(135deg, var(--color-background) 0%, #f0f9ff 100%);
}

.ingredients-content {
  padding: var(--spacing-2xl) 0;
}

.ingredients-grid {
  display: grid;
  gap: var(--spacing-lg);
  max-width: 900px;
  margin: 0 auto;
}

.ingredient-category {
  background: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--border-radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  transition: var(--transition);
}

.ingredient-category:hover {
  box-shadow: var(--shadow-md);
}

.ingredient-category__header {
  padding: var(--spacing-lg);
  background: var(--color-primary);
  color: white;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: var(--transition);
}

.ingredient-category__header:hover {
  background: #1e3a0f;
}

.ingredient-category__title {
  font-size: 1.25rem;
  font-weight: 600;
  margin: 0;
}

.ingredient-category__toggle {
  width: 24px;
  height: 24px;
  transition: var(--transition);
}

.ingredient-category[open] .ingredient-category__toggle {
  transform: rotate(180deg);
}

.ingredient-category__content {
  padding: var(--spacing-lg);
}

.ingredient-list {
  list-style: none;
